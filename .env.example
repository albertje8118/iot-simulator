# ==============================================================================
# Azure IoT Hub Configuration
# ==============================================================================
# IoT Hub connection string (without DeviceId)
# Format: HostName={YourIoTHubName}.azure-devices.net;SharedAccessKeyName=iothubowner;SharedAccessKey={Key}
# OR use a device connection string template (DeviceId will be replaced dynamically)

IOTHUB_HOSTNAME=your-iot-hub.azure-devices.net
IOTHUB_SHARED_ACCESS_KEY_NAME=device
IOTHUB_SHARED_ACCESS_KEY=YOUR_SHARED_ACCESS_KEY_HERE

# Device ID prefix - will generate: screw-robot-001, screw-robot-002, etc.
DEVICE_ID_PREFIX=screw-robot

# ==============================================================================
# Simulation Parameters
# ==============================================================================

# Number of devices to simulate (1-10)
NUM_DEVICES=10

# Base interval between screwing operations (seconds)
SCREWING_INTERVAL_SECONDS=60

# Random jitter added to interval (±seconds) for realistic variance
INTERVAL_JITTER_SECONDS=10

# Constant screwing speed in rotations per minute (RPM)
CONSTANT_SPEED_RPM=1800

# ==============================================================================
# Anomaly Configuration
# ==============================================================================

# Probability of generating anomalies (0.0 to 1.0)
# 0.05 = 5% chance of anomaly per screwing operation
# You can change this value while the simulator is running!
ANOMALY_RATE=0.05

# Temperature anomaly threshold (°C) - values above this are flagged
TEMP_ANOMALY_THRESHOLD=85

# Vibration spike threshold (g-force) - values above this indicate excessive vibration
VIBRATION_SPIKE_THRESHOLD=2.0

# Speed variance percentage for speed anomalies (%)
# 15 = speed can drop by up to 15% during anomaly
SPEED_VARIANCE_PERCENT=15

# ==============================================================================
# Degradation Simulation
# ==============================================================================

# Enable gradual component degradation over time (true/false)
# When enabled, component health decreases based on operational hours
ENABLE_DEGRADATION=false

# ==============================================================================
# Logging Configuration
# ==============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
# DEBUG: Shows all config reload checks and detailed telemetry
# INFO: Shows config changes, connections, and messages sent
# WARNING: Shows only warnings and errors
LOG_LEVEL=INFO
